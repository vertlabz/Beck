# Neon (recommended)
# Use the POOLED connection string for runtime (serverless)
DATABASE_URL="postgresql://USER:PASSWORD@HOST/dbname?sslmode=require&pgbouncer=true"

# Use the DIRECT (non-pooled) connection string for migrations
DIRECT_URL="postgresql://USER:PASSWORD@HOST/dbname?sslmode=require"

# Auth
JWT_SECRET="change-me"
JWT_EXPIRES_IN="2h"
JWT_REFRESH_EXPIRES_DAYS="30"

# Cookies
REFRESH_TOKEN_COOKIE_NAME="rtk"
REFRESH_TOKEN_COOKIE_PATH="/"
